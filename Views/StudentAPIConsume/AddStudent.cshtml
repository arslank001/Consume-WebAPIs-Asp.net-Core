@model RestfulAPIs_Asp.netCore.Models.StudentModel
@{
    ViewData["Title"] = "AddStudent";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3  border border-dark p-4 rounded rounded-top">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Student</h1>
                    <p class="text-center text-danger">@TempData["Exception"]</p>
                    <p class="text-center text-danger">@TempData["Error"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddStudent">
                        <div class="form-group">
                            <label asp-for="RegistrationNo"></label>
                            <input type="text" asp-for="RegistrationNo" class="form-control" placeholder="Enter Registration No" />
                            <span class="text-danger" asp-validation-for="RegistrationNo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Student Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender"></label>
                            <select class="form-control" asp-for="Gender">
                                <option>--Select Gender--</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>                          
                       <span class="text-danger" asp-validation-for="Gender"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IsActive"></label>
                            <input type="checkbox" asp-for="IsActive" class="custom-checkbox"/>
                            <span class="text-danger" asp-validation-for="IsActive"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml"); }
}
